header(ng-include="'app/templates/navbar/navbar.html'")
div.container.teal.lighten-2
  div.valign-wrapper
    div(style="width: 100%;")
      div.animated.fadeInUp
        h1.center-align  The smart way to shop

  //- div.container.brands
  //-   img(src="assets/images/sarenza.png", style="width: 216px; height: auto;")
  //-   img(src="assets/images/asos.png", style="width: 216px; height: auto; margin-bottom: -19px;")
  .row(style="margin-top: 5%;")
    .col.s6
      select(id="select_sex").animated.fadeInLeft.browser-default
        option(value="" ,disabled, selected) Sex
        option(value="femme") Woman
        option(value="homme") Man
    .col.s6
      select(id="select_size").animated.fadeInRight.browser-default
        option(value="" , disabled, selected) Size
        option(value="35") 35
        option(value="36") 36
        option(value="37") 37
        option(value="38") 38
        option(value="39") 39
        option(value="40") 40
        option(value="41") 41
        option(value="42") 42
        option(value="43") 43
        option(value="44") 44
        option(value="45") 45
        option(value="46") 46
        option(value="47") 47

  button.red.lighten-3.btn-large.waves-effect.waves-light.animated.fadeInLeft(type="submit" name="action", style="width: 100%;", ng-click="submit()") Find
    i.mdi-content-send.right

  toaster-container(toaster-options="{'position-class': 'toast-top'}")
  .preloader-wrapper.big.active(ng-show="is_submitted", style="margin-left: 45%; margin-top: 50px;")
    .spinner-layer.spinner-red-only
      .circle-clipper.left
        .circle
      .gap-patch
        .circle
      .circle-clipper.right
        .circle


  .row(style="margin-top: 50px;")
    .col.s1.m4(ng-repeat="res in zalando_res", ng-show="is_loaded", style="width: 297px;", on-last-repeat).animated.fadeInUp
      .card.teal.lighten-3
        .card-image(style="background: #fff; height: 221px; overflow: hidden;", ng-class="{'asos': true}").center-align.z-depth-1
          img(ng-src="{{ res.imagebox_image }}", data-caption="{{ res['imagebox_image/_alt'] }}", style="height: 350px; width: auto; margin-top: -127px", ng-if="res.from === 'asos'")
          img(ng-src="{{ res.imagebox_image }}", data-caption="{{ res['imagebox_image/_alt'] }}", style="height: 350px; width: auto;  margin-top: -64px; ", ng-if="res.from === 'zalando'")
          img(ng-src="{{ res.imagebox_image }}", data-caption="{{ res['imagebox_image/_alt'] }}", style="height: 127px; width: auto;  margin-top: 47px; ", ng-if="res.from === 'sarenza'")
          img(ng-src="{{ res.imagebox_image }}", data-caption="{{ res['imagebox_image/_alt'] }}", style="height: 200px; width: auto;  margin-top: 14px; ", ng-if="res.from === 'shoes'")
        .card-content.teal.lighten-3.white-text(style="background: #fff;")
          .card-title
            p.truncate {{ res['imagebox_image/_alt'] }}
        a(style="width: 100%;", href="{{ res['link_1'] }}", target="blanck").z-depth-2
          .card-action.red-text.waves-effect.waves-light.red.lighten-3(style="width: 100%;").z-depth-1.white-text BUY {{ res['price'] }} €
